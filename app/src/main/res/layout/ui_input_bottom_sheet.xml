<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingTop="16dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_height="140dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용 추가"
        android:textSize="13sp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/colorPrimary"/>

    <RelativeLayout
        android:id="@+id/contents_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/contents_add"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_width="38dp"
            android:layout_height="38dp">

            <com.mhwan.profileiconview.CircleView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:circle_background_color="@color/colorAccent"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_add_black_24dp"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/contents_input"
            android:layout_toLeftOf="@id/contents_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이 사진은 어떠셨나요? 내용을 남겨주세요"
            android:background="@android:color/transparent"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryBlack"/>

    </RelativeLayout>



</LinearLayout>