<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.picaproject.pica">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:name=".Util.AppContext"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.NewLocationActivity"></activity>

        <activity
            android:name=".Activity.LocationListActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Activity.ImageDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Activity.NotificationListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.FriendListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.SettingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.CreateAlbumActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activity.InviteMemberActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.UploadPicActivity" />
        <activity android:name=".Activity.UploadAlbumActivity" />
        <activity
            android:name=".Activity.NewAlbumUploadActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.AlbumMainActivity"
            android:theme="@style/AppTheme.NoStatusBar" />
